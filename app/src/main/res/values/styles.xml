<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/big_noodle_titling</item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="sr_text">
        <item name="android:fontFamily">@font/big_noodle_titling_oblique</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="sr_text_win" parent="sr_text">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="sr_text_loss" parent="sr_text">
        <item name="android:textColor">@color/colorRed</item>
    </style>


    <style name="sr_text_tie" parent="sr_text">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
</resources>
